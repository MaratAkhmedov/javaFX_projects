<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="30.0" style="-fx-background-color: eff9fd;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.FXMLModifyTutoriaController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label style="-fx-background-color: #599bfa; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: black;" text="Modificar datos de la tutoría seleccionada">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets bottom="10.0" left="30.0" right="10.0" top="30.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Label text="Estado de la tutoría: ">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <ComboBox fx:id="dropdownEstados" minWidth="250.0" prefWidth="150.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" minHeight="100.0" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Label text="Modificar anotaciones: ">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="250.0" style="-fx-border-color: black; -fx-border-radius: 5;" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Button fx:id="modificar" defaultButton="true" mnemonicParsing="false" onAction="#modificar" text="Añadir anotaciones" textFill="WHITE" />
            <Button cancelButton="true" mnemonicParsing="false" onAction="#cancelar" text="Cancelar" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </children>
</VBox>
